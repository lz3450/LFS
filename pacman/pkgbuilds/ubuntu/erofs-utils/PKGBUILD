# Maintainer: KZL <lz3450@outlook.com>

pkgname=erofs-utils
pkgver=1.8.10
pkgrel=4
epoch=
pkgdesc="Userspace utilities for linux-erofs file system"
arch=('x86_64')
url="https://git.kernel.org/pub/scm/linux/kernel/git/xiang/erofs-utils.git"
license=('KZL')
source=(
  git+git://git.kernel.org/pub/scm/linux/kernel/git/xiang/erofs-utils.git
)
sha256sums=('SKIP')

prepare() {
  cd $pkgname

  ./autogen.sh
}

build() {
  cd $pkgname

  msg2 "Configuring..."
  ./configure \
    --prefix=/usr \
    --enable-lz4 \
    --disable-lzma \
    --with-zlib \
    --with-libzstd \
    --with-xxhash \
    --with-uuid

  msg2 "Compiling..."
  make
}

check() {
  cd $pkgname

  make -k check
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir" install
}

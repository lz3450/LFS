# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=fish
pkgver=4.0.6
pkgrel=1
epoch=
pkgdesc="A smart and user-friendly command line shell"
arch=('x86_64')
url="https://fishshell.com/"
license=('KZL')
backup=(
  etc/fish/config.fish
)
install=$pkgname.install
source=(
  git+https://github.com/fish-shell/fish-shell.git#tag=$pkgver
)
sha256sums=('e0881f1f4f59656eb69881400f5f2a7b30efebbe590f0c5d31d608e0675775b4')

build() {
  cd fish-shell

  msg2 "Configuring..."
  cmake -LAH -S . -B build \
    -D CMAKE_BUILD_TYPE=Release \
    -D CMAKE_INSTALL_PREFIX="/$PREFIX" \
    -D CMAKE_C_FLAGS="$CFLAGS $CPPFLAGS" \
    -D CMAKE_CXX_FLAGS="$CXXFLAGS $CPPFLAGS" \
    -D BUILD_DOCS=OFF

  msg2 "Compiling..."
  cmake --build build
}

check() {
  cd fish-shell

  cmake --build build --target test
}

package() {
  cd fish-shell

  DESTDIR="$pkgdir" cmake --build build --target install
}

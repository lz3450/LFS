# Maintainer: KZL <lz3450@outlook.com>

pkgname=python
pkgver=3.14.3
pkgrel=1
epoch=
pkgdesc="Next generation of the python high-level scripting language"
arch=('x86_64')
url="https://www.python.org/"
license=('KZL')
source=(git+https://github.com/python/cpython.git#tag=v$pkgver)
sha256sums=('6abdbf2d5bcd0f6eb6ecf1fa11221d7984d64a3ff10226caf8d70d400cba4c26')

build() {
  cd cpython

  CFLAGS="${CFLAGS/-O2/-O3}"

  msg2 "Configuring..."
  ./configure \
    --prefix="/$PREFIX" \
    --enable-shared=yes \
    --disable-gil \
    --enable-optimizations \
    --enable-loadable-sqlite-extensions=yes \
    --enable-ipv6=yes \
    --enable-big-digits=30 \
    --with-pkg-config=yes \
    --with-lto=yes \
    --with-tzpath=/usr/share/zoneinfo \
    --with-dbmliborder=gdbm:ndbm \
    --with-readline=editline \
    --with-ensurepip=no

  msg2 "Compiling..."
  make
}

package() {
  cd cpython

  make DESTDIR="$pkgdir" install
}

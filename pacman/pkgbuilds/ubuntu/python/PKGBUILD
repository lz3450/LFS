# Maintainer: KZL <lz3450@outlook.com>

pkgname=python
pkgver=3.13.7
pkgrel=1
epoch=
pkgdesc="Next generation of the python high-level scripting language"
arch=('x86_64')
url="https://www.python.org/"
license=('KZL')
source=(git+https://github.com/python/cpython.git#tag=v$pkgver)
sha256sums=('da6a413819a117751e9327035412ff5d70a2742e06e2e9d1fd977bf7d31ce884')

build() {
  cd cpython

  CFLAGS="${CFLAGS/-O2/-O3}"

  msg2 "Configuring..."
  ./configure \
    --prefix="/$PREFIX" \
    --enable-shared=yes \
    --enable-optimizations \
    --enable-loadable-sqlite-extensions=yes \
    --enable-ipv6=yes \
    --enable-big-digits=30 \
    --with-pkg-config=yes \
    --with-lto=yes \
    --with-tzpath=/usr/share/zoneinfo \
    --with-system-expat=no \
    --with-system-libmpdec=no \
    --with-dbmliborder=gdbm:ndbm \
    --with-readline=editline \
    --with-ensurepip=no

  msg2 "Compiling..."
  make
}

package() {
  cd cpython

  make DESTDIR="$pkgdir" install

  rm -vr "$pkgdir/$PREFIX/lib/python${pkgver%.*}"/{test,idlelib/idle_test}
}

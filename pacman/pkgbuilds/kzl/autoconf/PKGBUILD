pkgname=autoconf
pkgver=2.72
pkgrel=24
epoch=
pkgdesc="A GNU tool for automatically configuring source code"
arch=('any')
url="https://www.gnu.org/software/autoconf/"
license=('KZL')
groups=(base-devel)
depends=(
  m4
)
makedepends=(
  # autoconf
  make
)
source=(
  # git+http://git.savannah.gnu.org/r/autoconf.git#tag=v$pkgver
  https://ftp.gnu.org/gnu/autoconf/$pkgname-$pkgver.tar.xz{,.sig}
)
validpgpkeys=('82F854F3CE73174B8B63174091FCC32B6769AA64')
sha256sums=('ba885c1319578d6c94d46e9b0dceb4014caafe2490e437a0dbca3f270a223f5a'
            'SKIP')

# prepare() {
#   cd $pkgname-$pkgver

#   autoreconf -vfi
# }

build() {
  cd $pkgname-$pkgver

  msg2 "Configuring..."
  ./configure \
    --prefix=/usr

  msg2 "Compiling..."
  make
}

check() {
  cd $pkgname-$pkgver

	make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install

  rm -f "$pkgdir"/usr/share/info/standards.info
}

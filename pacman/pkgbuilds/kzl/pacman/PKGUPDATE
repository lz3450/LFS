new_version=$(git ls-remote --tags https://gitlab.archlinux.org/pacman/pacman.git | grep -oP '(?<=refs/tags/v)7\.1\.0' | sort -V | tail -n1)
srcdir="$pkgname"
build_system=meson

post_update() {
    cd "$BUILDDIR/$pkgname/src/$pkgname"
    find etc -type f ! -name '.gitignore' -exec cp {} "$PKGBUILDDIR"/ \;
}

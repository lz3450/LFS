post_install() {
  if ! grep -qe '^/bin/fish$' etc/shells
  then
    echo '/bin/fish' >> etc/shells
  fi

  if ! grep -qe '^/usr/bin/fish$' etc/shells
  then
    echo '/usr/bin/fish' >> etc/shells
  fi
}

post_upgrade() {
  post_install
}

pre_remove() {
  sed -i -r '/^(\/usr)?\/bin\/fish$/d' etc/shells
}

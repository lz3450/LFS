# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=gobject-introspection
pkgver=1.66.1
_glibver=2.64.1
pkgrel=1
epoch=1
pkgdesc="Introspection system for GObject-based libraries"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GObjectIntrospection"
depends=(glib2)
makedepends=(cairo)
options=(!emptydirs)
provides=(gobject-introspection-runtime)
conflicts=(gobject-introspection-runtime)
replaces=(gobject-introspection-runtime)
source=(git+https://gitlab.gnome.org/GNOME/gobject-introspection.git#tag=1.64.1
        git+https://gitlab.gnome.org/GNOME/glib.git?signed#tag=$_glibver)
sha256sums=('SKIP'
            'SKIP')
validpgpkeys=('923B7025EE03C1C59F42684CF0942E894B2EAFA0')

prepare() {
  sudo pip install -U --no-binary :all: mako markdown sphinx
}

build() {
  cd $pkgname

  meson setup \
    --prefix /usr \
    --libexecdir lib \
    --sbindir bin \
    --auto-features enabled \
    --buildtype plain \
    --wrap-mode nodownload \
    -D b_lto=true \
    -D b_pie=true \
    -D gtk_doc=false \
    -D glib_src_dir="$srcdir/glib" \
    build

  meson compile -C build
}

check() {
  cd $pkgname

  meson test -C build
}

package() {
  cd $pkgname

  DESTDIR="$pkgdir/" meson install -C build
}

# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=dracut
pkgver=059.g215
pkgrel=3
epoch=
pkgdesc="An event driven initramfs infrastructure"
arch=('x86_64')
url="https://github.com/dracutdevs/dracut/wiki/"
license=('KZL')
backup=(
  etc/dracut.conf
)
source=(
  # git+https://github.com/lz3450/dracut.git
  git+https://github.com/dracutdevs/dracut.git
)
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git describe --tags | sed 's/-g.*//;s/-/.g/'
}

prepare() {
  cd $pkgname

  ./configure \
    --prefix=/usr \
    --disable-documentation
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir" install
}

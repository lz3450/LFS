# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=util-linux
pkgver=2.38.1
pkgrel=18
epoch=
pkgdesc="Miscellaneous system utilities for Linux"
arch=('x86_64')
url="https://github.com/util-linux/util-linux"
license=('KZL')
depends=(bash-completion cryptsetup file libcap-ng libxcrypt ncurses pam readline systemd)
backup=(etc/pam.d/{runuser,runuser-l,su,su-l})
source=(git+$url.git#tag=v$pkgver
        {runuser,su}.pam)
sha256sums=('SKIP'
            '59626ac70847c83b75df53a51c0833579b6959be519d79e80ad1657e13976a67'
            '2ff55fcc54dbc334debf12e7230f9631def46287dc065aef07ffa71175c89e59')

prepare() {
  cd $pkgname

  ./autogen.sh
}

build() {
  cd $pkgname

  ./configure \
    --prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/sbin \
    --libdir=/usr/lib \
    --enable-static=no \
    --disable-asciidoc \
    --disable-bfs \
    --disable-chfn-chsh \
    --disable-login \
    --disable-nologin \
    --enable-write \
    --enable-fs-paths-default=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin \
    --enable-usrdir-path \
    --with-audit \
    --with-cryptsetup

    make

  # meson setup \
  #   --prefix /usr \
  #   --optimization 2 \
  #   -D build-bash-completion=enabled \
  #   -D build-chfn-chsh=disabled \
  #   -D build-login=disabled \
  #   -D build-newgrp=disabled \
  #   -D build-nologin=disabled \
  #   -D build-python=enabled \
  #   -D build-rfkill=enabled \
  #   -D build-runuser=enabled \
  #   -D build-su=enabled \
  #   -D build-vipw=disabled \
  #   -D fs-search-path=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin \
  #   -D python=python3 \
  #   -D systemd=enabled \
  #   build

  # meson compile -C build
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir" install

  # meson install -C build --destdir="$pkgdir/"

  # install PAM files for login-utils
  install -d -m755 "$pkgdir"/etc/pam.d
  install -Dm644 "$srcdir"/runuser.pam "$pkgdir"/etc/pam.d/runuser
  install -Dm644 "$srcdir"/runuser.pam "$pkgdir"/etc/pam.d/runuser-l
  install -Dm644 "$srcdir"/su.pam "$pkgdir"/etc/pam.d/su
  install -Dm644 "$srcdir"/su.pam "$pkgdir"/etc/pam.d/su-l
}

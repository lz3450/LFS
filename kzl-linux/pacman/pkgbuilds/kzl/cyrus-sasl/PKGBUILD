# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=cyrus-sasl
pkgver=2.1.28
pkgrel=8
epoch=
pkgdesc="An implementation of Cyrus Simple Authentication Service Layer (SASL)"
arch=('x86_64')
url="http://www.cyrusimap.org/sasl/"
license=('KZL')
depends=(gdbm libxcrypt)
makedepends=(krb5 pam)
# makedepends=(krb5 openldap pam)
source=(git+https://github.com/cyrusimap/cyrus-sasl.git#tag=$pkgname-$pkgver)
sha256sums=('SKIP')

prepare() {
  cd $pkgname

  NOCONFIGURE=1 ./autogen.sh
}

build() {
  cd $pkgname

  ./configure \
    --prefix=/usr \
    --enable-static=no \
    --enable-shared=yes \
    --enable-gssapi=yes \
    --enable-sql=no \
    --enable-ldapdb=no \
    --with-dblib=gdbm \
    --with-saslauthd=/run/saslauthd \
    --with-openssl \
    --with-pam

  make
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir" install
}

new_version=$(curl https://hg.mozilla.org/releases/mozilla-release/raw-file/default/security/nss/lib/ckfw/builtins/nssckbi.h | grep "NSS_BUILTINS_LIBRARY_VERSION " | awk '{print $NF}' | sed -e "s;\";;g")
srcdir=
build_system=

pre_update() {
    rm -vf \
        "$SRCDEST"/certdata.txt \
        "$SRCDEST"/nssckbi.h \
        "$SRCDEST"/certdata2pem.py \
        "$SRCDEST"/update-ca-trust \
        "$SRCDEST"/README.etc \
        "$SRCDEST"/README.src \
        "$SRCDEST"/README.extr \
        "$SRCDEST"/README.pem \
        "$SRCDEST"/README.openssl \
        "$SRCDEST"/README.usr
    updpkgsums
}

post_update() {
    cd "$BUILDDIR/$pkgname/src"
    cp update-ca-trust "$PKGBUILDDIR"/update-ca-trust.sh
}

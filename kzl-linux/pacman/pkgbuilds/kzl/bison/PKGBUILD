# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=bison
pkgver=3.8.2
pkgrel=26
epoch=
pkgdesc="The GNU general-purpose parser generator"
arch=('x86_64')
url="https://www.gnu.org/software/bison/"
license=('KZL')
groups=(base-devel)
depends=(
  m4
)
makedepends=(
  make
  texinfo
)
source=(https://ftp.gnu.org/gnu/bison/$pkgname-$pkgver.tar.xz{,.sig})
# source=(git+https://git.savannah.gnu.org/git/bison.git
#         git+https://git.savannah.gnu.org/git/gnulib.git)
validpgpkeys=('7DF84374B1EE1F9764BBE25D0DDCAA3278D5264E')
sha256sums=('9bba0214ccf7f1079c5d59210045227bcf619519840ebfa80cd3849cff5a5bf2'
            'SKIP')

build() {
  cd $pkgname-$pkgver

  msg2 "Configuring..."
  ./configure \
    --prefix=/usr

  msg2 "Compiling..."
  make
}

check() {
  cd $pkgname-$pkgver

  make -k check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}

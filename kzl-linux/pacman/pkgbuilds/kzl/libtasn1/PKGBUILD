build() {
  cd $pkgname-$pkgver

  msg2 "Configuring..."
  ./configure \
    --prefix=/usr \
    --disable-doc

  msg2 "Compiling..."
  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}

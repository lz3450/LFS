# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=cmake
pkgver=4.0.1
pkgrel=1
epoch=
pkgdesc="A powerful software build system"
arch=('x86_64')
url="https://www.cmake.org/"
license=('KZL')
groups=(base-devel)
depends=(
  # cppdap
  curl
  expat
  jsoncpp
  libarchive
  libuv
  nghttp2
  rhash
)
# depends=(curl cppdap expat jsoncpp libarchive libuv nghttp2 rhash)
makedepends=(
  make
  # qt6
)
# optdepends=("qt6: Qt-based GUI")
source=(git+https://github.com/Kitware/CMake.git#tag=v$pkgver)
sha256sums=('73fb5743a93d45ac2f46c086ce81ca5a205a8ad9cbaa4808ad4f6b2e641c3600')

build() {
  cd CMake

  msg2 "Configuring..."
  ./bootstrap \
    --prefix=/usr \
    --datadir=share/cmake \
    --docdir=share/doc/cmake \
    --mandir=share/man \
    --parallel=$(nproc) \
    --system-libs \
    --no-system-cppdap \
    --system-curl \
    --system-expat \
    --system-jsoncpp \
    --system-zlib \
    --system-bzip2 \
    --system-liblzma \
    --system-nghttp2 \
    --system-zstd \
    --system-libarchive \
    --system-librhash \
    --system-libuv \
    --no-qt-gui

  msg2 "Compiling..."
  make
}

package() {
  cd CMake

  make DESTDIR="$pkgdir" install
}

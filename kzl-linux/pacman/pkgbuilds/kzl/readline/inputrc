# Initialization file for readline.
# See readline(3) for details.

# terminal bell
set bell-style audible
#set bell-style none
#set bell-style visible

# enable eight-bit input
set input-meta on
set output-meta on
set convert-meta off

# completed names which are symbolic links to directories have a slash appended
set mark-symlinked-directories on

$if mode=emacs

# allow the use of the Home/End keys
"\e[1~": beginning-of-line
"\e[4~": end-of-line

# allow the use of the Delete/Insert keys
"\e[3~": delete-char
"\e[2~": quoted-insert

# mappings for pgup/pgdown to reach begin/end of the history
# "\e[5~": beginning-of-history
# "\e[6~": end-of-history
# mappings for pgup/pgdown to search the history
"\e[5~": history-search-backward
"\e[6~": history-search-forward

# mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving
"\e[5C": forward-word
"\e[5D": backward-word
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word

$if term=rxvt
"\e[7~": beginning-of-line
"\e[8~": end-of-line
"\eOc": forward-word
"\eOd": backward-word
$endif

# for non RH/Debian xterm, can't hurt for RH/Debian xterm
"\eOH": beginning-of-line
"\eOF": end-of-line

# for freebsd console
"\e[H": beginning-of-line
"\e[F": end-of-line

$endif
